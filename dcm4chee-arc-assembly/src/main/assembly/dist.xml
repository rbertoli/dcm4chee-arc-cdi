<?xml version="1.0" encoding="UTF-8"?>
<assembly
  xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0 http://maven.apache.org/xsd/assembly-1.1.0.xsd">
  <id>${db}</id>
  <formats>
    <format>zip</format>
  </formats>
  <fileSets>
    <fileSet>
      <directory>..</directory>
      <includes>
        <include>INSTALL.md</include>
        <include>README.md</include>
        <include>LICENSE.txt</include>
      </includes>
      <outputDirectory>.</outputDirectory>
      <lineEnding>dos</lineEnding>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/maven-shared-archive-resources</directory>
      <outputDirectory>.</outputDirectory>
      <includes>
        <include>ldap/**</include>
      </includes>
      <lineEnding>dos</lineEnding>
    </fileSet>
    <fileSet>
      <directory>../dcm4chee-arc-conf/src/main/config</directory>
      <outputDirectory>.</outputDirectory>
      <includes>
        <include>configuration/dcm4chee-arc/*.xsl</include>
        <include>configuration/dcm4chee-arc/*.json</include>
        <include>ldap/**</include>
        <include>jboss-cli/*.cli</include>
      </includes>
      <filtered>true</filtered>
      <excludes>
        <exclude>ldap/unldif.sed</exclude>
      </excludes>
      <lineEnding>dos</lineEnding>
    </fileSet>
    <fileSet>
      <directory>../dcm4chee-arc-conf/src/main/config</directory>
      <outputDirectory>.</outputDirectory>
      <includes>
        <include>ldap/unldif.sed</include>
      </includes>
      <lineEnding>unix</lineEnding>
    </fileSet>
    <fileSet>
      <directory>../dcm4chee-arc-conf/src/main/config</directory>
      <outputDirectory>.</outputDirectory>
      <includes>
        <include>configuration/dcm4chee-arc/key.jks</include>
      </includes>
      <lineEnding>keep</lineEnding>
    </fileSet>
    <fileSet>
      <directory>../dcm4chee-arc-entity/src/main</directory>
      <includes>
        <include>sql/create-index.ddl</include>
        <include>sql/create-fk-index.ddl</include>
      </includes>
      <outputDirectory>.</outputDirectory>
      <lineEnding>dos</lineEnding>
    </fileSet>
    <fileSet>
      <directory>../dcm4chee-arc-entity/target</directory>
      <includes>
        <include>create-table-${db}.ddl</include>
        <include>drop-table-${db}.ddl</include>
      </includes>
      <outputDirectory>sql</outputDirectory>
      <lineEnding>dos</lineEnding>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/dcm4chee-arr</directory>
      <outputDirectory>jboss-cli/</outputDirectory>
      <includes>
        <include>arr-setup.cli</include>
      </includes>
    </fileSet>
  </fileSets>
  <dependencySets>
    <dependencySet>
      <outputDirectory>deploy</outputDirectory>
      <includes>
        <include>org.dcm4che.dcm4chee-arc:dcm4chee-arc-war</include>
        <include>org.dcm4che.dcm4chee-arc:dcm4chee-arc-web</include>
        <include>org.dcm4che.dcm4chee-arc:dcm4chee-arc-ear</include>
      </includes>
<!--       <outputFileNameMapping>${artifact.artifactId}-${project.version}${dashClassifier?}.${artifact.extension}</outputFileNameMapping>
 -->      <useProjectArtifact>false</useProjectArtifact>
    </dependencySet>
    <dependencySet>
      <outputDirectory>jboss-module</outputDirectory>
      <includes>
        <include>org.dcm4che:dcm4che-jboss-modules</include>
        <include>org.dcm4che:querydsl-jboss-modules</include>
        <include>org.dcm4che:jdbc-jboss-modules</include>
        <include>org.dcm4che:jai_imageio-jboss-modules</include>
        <include>org.dcm4che.dcm4chee-arc:json-jboss-modules</include>
        <include>org.dcm4che:jclouds-jboss-modules</include>
        <include>org.dcm4che:jxpath-jboss-module</include>
        <include>org.dcm4che:compress-jboss-module</include>
        <include>org.dcm4che:jsch-jboss-modules</include>
        <include>org.dcm4che:jcifs-jboss-modules</include>
        <include>org.dcm4che.dcm4chee-arc:dcm4chee-arc-jboss-modules</include>
      </includes>
      <useProjectArtifact>false</useProjectArtifact>
    </dependencySet>
  </dependencySets>
</assembly>
