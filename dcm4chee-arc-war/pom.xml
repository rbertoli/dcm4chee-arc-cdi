  <profiles>
    <profile>
      <id>wildfly-deploy</id>
      <properties>
        <wildfly-skip>false</wildfly-skip>
        <wildfly-hostname>127.0.0.1</wildfly-hostname>
        <wildfly-port>9990</wildfly-port>
      </properties>
    </profile>
    <profile>
      <id>secure</id>
      <activation>
        <property>
          <name>secure</name>
          <value>true</value>
        </property>
      </activation>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-war-plugin</artifactId>
            <configuration>
              <webXml>src/secure/web.xml</webXml>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>jmelody</id>      
      <dependencies>
        <dependency>
          <groupId>net.bull.javamelody</groupId>
          <artifactId>javamelody-core</artifactId>
          <version>1.55.0</version>
        </dependency>    
      </dependencies>      
    </profile>    
  </profiles>	  
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-war-plugin</artifactId>
        <configuration>
          <classifier>${db}</classifier>
          <webappDirectory>${project.build.directory}/${project.build.finalName}-${db}</webappDirectory>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.wildfly.plugins</groupId>
        <artifactId>wildfly-maven-plugin</artifactId>
        <version>1.0.1.Final</version>
        <configuration>
          <hostname>${wildfly-hostname}</hostname>
          <port>${wildfly-port}</port>
          <filename>${project.build.finalName}-${db}.${project.packaging}</filename>
          <skip>${wildfly-skip}</skip>
        </configuration>
        <executions>
          <execution>
            <phase>install</phase>
            <goals>
              <goal>deploy</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
